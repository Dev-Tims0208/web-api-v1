@model web_api_v1.ViewModels.EmployeesViewModel

@{
    ViewBag.Title = "EmployeesForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h2>Employees Form</h2>
        @using (Html.BeginForm("Save", "Employees"))
        {
            <div class="form-group">
                @Html.LabelFor(e => e.Employees.Name)
                @Html.TextBoxFor(e => e.Employees.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(e => e.Employees.Address)
                @Html.TextBoxFor(e => e.Employees.Address, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
</div>

